{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "windows-admin-tool",
  "version": "0.1.2",
  "identifier": "com.admin.tool.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:no-check"
  },
  "app": {
    "windows": [
      {
        "title": "Windows Admin Tool",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 720,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' data: asset: https://asset.localhost blob:",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-eval'",
        "connect-src": "'self' http://localhost:8080",
        "worker-src": "'self' blob:",
        "font-src": "'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
